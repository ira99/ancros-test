.header
	padding: 0 50px
	position: relative
	color: $white-color
	background-position: top center 
	background-image: url('../images/line.svg')
	
	@media(max-width: 1200px)
		padding: 0 15px
	
	@media(max-width: 992px)
		background: none
		padding: 15px
		display: flex 
		align-items: center 
		justify-content: space-between

.logo 
	position: absolute 
	top: 18px
	left: 50%
	transform: translateX(-50%)
	font-size: 34px 
	font-family: $secondaryFont
	color: $white-color 
	text-transform: uppercase
	letter-spacing: 0.05em
	padding: 9px 21px 0 22px
	margin: 0
	font-weight: 500
	
	@media(max-width: 992px)
		position: static
		transform: none
		padding: 0
	
	@media(max-width: 460px)
		font-size: 27px

.nav 
	&__list 
		display: flex 
		padding: 21px 0
		margin: 0
	&__item 
		padding: 0 18px 
		list-style: none
		&:nth-child(3)
			margin-left: auto
		&:nth-child(1)
			padding-left: 70px
	&__link 
		text-transform: uppercase 
		font-size: 16px
		letter-spacing: 0.05em
		transition: opacity 0.35s $easeOut
		
		&:hover 
			opacity: 0.7
	
	@media(max-width: 1200px)
		&__item
			padding: 0 8px
			&:nth-child(1)
				padding-left: 8px 
	
	@media(max-width: 992px)
		position: fixed 
		width: 100%
		height: 100vh 
		background-color: $dark-color
		color: $white-color
		top: 0 
		left: 0 
		z-index: 16
		display: flex 
		align-items: center 
		justify-content: center
		transform: translate3d(105%,0,0)
		opacity: 0
		transition: transform 0.7s ease-in-out

		&.is-active
			opacity: 1
			transform: translate3d(0,0,0)
		
		&__list 
			display: block 
			text-align: center 
		&__item 
			padding: 30px 0
		&__link 
			font-size: 7vw


.burger span,
.burger span:before,
.burger span:after 
	cursor: pointer 
	border-radius: 1px 
	height: 2px 
	width: 28px 
	background: $white-color
	position: absolute 
	left: 0 
	top: 50% 
	display: block 
	content: '' 
	transition: all 0.5s ease-in-out
	border-radius: 5px


.burger 
	background: transparent 
	position: absolute
	right: 20px 
	height: 22px 
	width: 28px 
	cursor: pointer  
	display: none
	z-index: 21
	span 
		&:before 
			top: -8px 
		&:after 
			top: 8px 
	&.is-active 
		span 
			background-color: transparent 
			&:before 
				transform: rotate(135deg) 
				background-color: $white-color 
				top: 0
			&:after 
				transform: rotate(-135deg)
				background-color: $white-color
				top: 0 

	@media(max-width: 992px)
		display: block
			
				