* {
    box-sizing: border-box;
}

canvas {
    display: block;
}

body {
    font-family: $baseFont;
    background-color: $dark-color;
    font-size: 16px;
}

.preview {
	background-color: $dark-color;
}

a {
	text-decoration: none;
	color: inherit;
}

.svg-icon {
	width: 100%;
	height: 100%;
}

img {
	max-width: 100%;
}

.wrapper {
	padding: 0 5px;
	position: relative;
}