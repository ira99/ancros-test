.banner
	margin: 40px 0 50px
	position: relative 
	
	&__wrapper
		position: relative
	
	&__slider
		position: relative
		z-index: 1
		overflow: hidden
		width: 100% 
		height: 40vw
		
		.swiper-wrapper
			height: 100% !important

	
	&__slide
		width: 100%
		height: 100% !important
		border-radius: 30px
		border: 1px solid $gray-color
		overflow: hidden
		&.swiper-slide-active
			.banner__desc 
				opacity: 1
				transform: translate3d(0,0,0)
			
			.banner__logo 
				transform: scale(1)

	&__desc
		max-width: 700px 
		color: $white-color
		text-transform: uppercase
		font-size: 1.2vw
		opacity: 0 
		transition: 1s $easeIn
		transition-delay: 1.2s !important
		transform: translate3d(0,35px,0)
		
	
	&__subtitle
		opacity: 0.5
		font-weight: 300 
		margin: 0 0 15px 
		letter-spacing: 3px
	
	&__title 
		font-weight: 300 
		font-size: 4vw
		line-height: 1.14
		letter-spacing: 1px
		margin: 0 0 40px
	
	&__text 
		font-weight: 300 
		margin-bottom: 50px


	&__logo 
		position: absolute
		right: 3vw
		bottom: 8vw
		max-width: 80px
		transition: 0.4s $easeInOut 
		transition-delay: 1s
		transform: scale(0)
	
	&__mask
		background-repeat: no-repeat 
		background-position: top center 
		background-size: cover
		background-image: url('../images/mask.svg') 
		width: 100%
		height: 100%
		position: absolute
		top: 0 
		left: 0
		z-index: 2
		
		&:after 
			content: ''
			width: calc(100% - 8px)
			height: calc(100% - 4px)
			position: absolute
			top: -3px 
			left: -3px 
			z-index: 3
			border: 8px solid $dark-color
			
	
	&__decor
		width: 25vw
		height: 60px 
		display: flex 
		align-items: center 
		justify-content: center	
		z-index: 3
		position: absolute 
		right: 50px
		top: 2vw
		
		
		&--bottom
			top: auto 
			bottom: 1vw
			margin: 0
			z-index: 3
		
		svg 
			fill: $white-color 
	
	&__icon 
		width: 27px
		margin-right: 4vw
	
	&__step 
		width: 127px
	
	&__slide-item 
		width: 100%
		height: 100%
		background-repeat: no-repeat 
		background-position: top center 
		background-size: cover 
		padding: 4% 0 4% 4%
		position: relative
		

	@media(max-width: 1600px)
		&__decor 
			top: 1vw
			
			&--bottom 
				top: auto
				bottom: 0

	
	@media(max-width: 1365px)
		&__decor 
			width: 22vw
	
	@media(max-width: 1023px)
		padding: 0 10px
		&__mask 
			display: none 
		&__desc 
			font-size: 16px 
		&__title 
			font-size: 6vw
		&__slider
			position: static 
			height: 48vw
		
		&__logo 
			width: 60px
			right: 15px
			bottom: 15px
		&__slide-item
			background-position: 100% 50%
	
	@media(max-width: 767px)
		&__title
			margin-bottom: 20px
		&__text 
			margin-bottom: 20px
		&__slide-item
			background-position: 60% 50%
			padding: 15px
	
	@media(max-width: 460px)
		&__slider 
			height: 85vw
		&__desc 
			font-size: 14px
		&__title 
			font-size: 9vw
		&__logo 
			width: 40px
			